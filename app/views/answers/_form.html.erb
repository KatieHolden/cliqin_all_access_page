<%= form_for(@answer) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :class_date %><br />
    <%= f.date_select :class_date %>
  </div>
  <div class="field">
    <%= f.label :total_points %><br />
    <%= f.number_field :total_points %>
  </div>
  <div class="field">
    <%= f.label :answers %> 
    <%= "**Submit answers in the form ABECDAB"  %><br />
    <%= f.text_field :answers %>
  </div>
  
  <%= hidden_field :answers, :course_ID, {value: @answer.course_ID} %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
