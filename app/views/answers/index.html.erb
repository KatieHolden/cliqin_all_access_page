<h1>Listing answers</h1>

<table>
  <tr>
    <th>Class date</th>
    <th>Total points</th>
    <th>Answers</th>
    <th>Course id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.class_date %></td>
    <td><%= answer.total_points %></td>
    <td><%= answer.answers %></td>
    <td><%= answer.course_ID %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

